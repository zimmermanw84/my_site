<div id="comments">
  <h1 class="top">Comments</h1>
  <!-- temp will style later -->
  <p style="text-align:center;">Go ahead leave a comment... I'd love to hear from you.</p>
  <div class="comment-section">
    <section class="comments input-group-lg">
      <h3 class="comment-count">0 Comments</h3>
      <% if session[:browserid_email] %>
      <form id="comment-form">
        <div class="form-row">
          <textarea name="content" placeholder="Leave a comment..."></textarea>
          <input id='user-email' type="hidden" name="email" data-email="<%= session[:browserid_email] %>">

        </div>
        <div class="form-row buttons">
          <span class="email"></span>
          <button class="btn submit" type="submit">Post your comment <%= session[:browserid_email] %></button>
          <a href="/logout" class="btn logout dark browserid_logout">Logout</a>
        </div>
      </form>
      <% else %>
      <div class="no-user">
        <p>You must login to leave a message...</p>
        <a href="/login" class="browserid_login btn">Login with Persona</a>
      </div>
      <% end %>
      <section class="comment-container">
        <ul id="comment-list" class="list-group"></ul>
      </section>
    </section>
  </div>
